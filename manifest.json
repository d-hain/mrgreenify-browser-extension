{
    "manifest_version": 3,
    "name": "MrGreenify",
    "version": "0.1",
    "description": "Puts MrGreen from LCOLONQ on every YouTube thumbnail.",

    "host_permissions": [ "*://*.youtube.com/*"],
    "permissions": [ "storage" ],
    "content_scripts": [
        {
            "matches": [ "*://*.youtube.com/*" ],
            "js": [ "main.js" ],
            "run_at": "document_idle"
        }
    ],

    "web_accessible_resources": [
        {
            "resources": [
                "images/*.png",
                "images/*.gif"
            ],
            "matches": [ "*://*/*" ]
        }
    ],

    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "icons": {
        "48": "icon.png"
    }
}
